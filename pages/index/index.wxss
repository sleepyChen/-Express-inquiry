/**index.wxss**/
page{
  height: 100%;
  background-color: #eee;
}
.nav-wrap{
  width: 100%;
  height: 321rpx;
  position: fixed;
}
.nav_bg{
  width: 100%;
  height: 321rpx;
  z-index: -1;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}
.nav-title{
  height: 160rpx;
  line-height: 160rpx;
  text-align: left;
  font-family: 'weiruanyahei';
  font-size: 34rpx;
  color: #fff;
  padding-left: 34rpx;
}
.input_wrap{
  width: 692rpx;
  margin: 0 auto;
  position: relative;
}
.input_border{
  width: 692rpx;
  height: 90rpx;
}
.ticket_id{
  width:540rpx;
  height: 86rpx;
  color: #fff;
  position: absolute;
  top: 0rpx;
  left: 85rpx;
}
.pClass{
  color: #fff;
  font-size: 26rpx;
}
.scan{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  margin: 24rpx 24rpx 0 0; 
}
view.tips{
  width: 426rpx;
  margin: 0 auto;
}
image.tips{
  width: 426rpx;
  height: 30rpx;
  margin: 80rpx auto;
  font-family: HYn1gj;
  font-size: 30rpx;
  color: #000;
}
.bg_null{
  width: 100%;
  height: 624rpx;
}
.history{
  background: #eee;
  padding-top: 320rpx;
}
.his_tag{
  padding: 36rpx 0 43rpx 0;
  font-size: 30rpx;
  color: #000;
}
.his_tag{
  width: 692rpx;
  margin: 0 auto;
}
.record{
  width: 692rpx;
  margin: 0rpx auto 20rpx;
  padding: 0 22rpx 24rpx  14rpx;
  background: #fff;
}
.record_msg{
  padding: 24rpx 0;
}
.sign{
  width: 34rpx;
  height: 34rpx;
  margin: 0 16rpx -3rpx 0;
}
.belong{
  font-size: 30rpx;
  color: #000;
}
.date,.time{
  font-size: 24rpx;
  color: #989898;
  margin-top: 12rpx;
  float: right;
}
.time{
  margin-left: 17rpx;
}
.note{
  color: #000;
  font-size: 30rpx;
  margin-bottom: 2rpx;
}
.record_info{
  background: #eee;
  padding: 24rpx 0 24rpx 18rpx;
  font-size: 24rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.record_info label{
  color: #281f63;
  float: left;
}
text.txt{
  width: 450rpx;
  color: #989898;
  margin-left: 17rpx;
  float: left;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}